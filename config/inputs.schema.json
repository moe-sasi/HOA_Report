{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HOA Report Input Configuration",
  "type": "object",
  "additionalProperties": false,
  "required": ["tape_path", "template_path"],
  "properties": {
    "tape_path": {
      "type": "string",
      "minLength": 1,
      "description": "Path to source tape workbook"
    },
    "template_path": {
      "type": "string",
      "minLength": 1,
      "description": "Path to report template workbook"
    },
    "vendor_paths": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "vendor_type": {
      "type": "string",
      "minLength": 1,
      "default": "example_vendor",
      "description": "Vendor extractor key used by the extractor registry"
    },
    "output_path": {
      "type": "string",
      "default": "data/output.xlsx"
    },
    "run_sql": {
      "type": "boolean",
      "default": false
    },
    "sql": {
      "type": "object",
      "additionalProperties": false,
      "required": ["connection_string"],
      "properties": {
        "connection_string": {
          "type": "string",
          "minLength": 1,
          "description": "SQLAlchemy connection string (example: mssql+pyodbc://...)"
        },
        "query_path": {
          "type": "string",
          "minLength": 1,
          "default": "sql/hoa_enrich.sql"
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "run_sql": { "const": true }
        }
      },
      "then": {
        "required": ["sql"]
      }
    }
  ]
}
