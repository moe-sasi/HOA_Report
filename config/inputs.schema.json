{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HOA Report Input Configuration",
  "type": "object",
  "additionalProperties": false,
  "required": ["tape_path", "template_path"],
  "properties": {
    "tape_path": {
      "type": "string",
      "minLength": 1,
      "description": "Path to source tape workbook"
    },
    "template_path": {
      "type": "string",
      "minLength": 1,
      "description": "Path to report template workbook"
    },
    "vendors": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "type", "path"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Logical vendor name used for QA and vendor priority ordering"
          },
          "type": {
            "type": "string",
            "minLength": 1,
            "description": "Extractor registry key"
          },
          "path": {
            "type": "string",
            "minLength": 1,
            "description": "Path to vendor source file"
          },
          "match_key": {
            "type": "string",
            "enum": ["loan_id", "collateral_id"],
            "default": "loan_id",
            "description": "Vendor ID mapping strategy to tape loan population"
          }
        }
      }
    },
    "vendor_priority": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "description": "Optional deterministic vendor fill order. Unlisted vendors are appended."
    },
    "vendor_paths": {
      "type": "array",
      "items": { "type": "string" },
      "default": [],
      "description": "Legacy single-type mode. Prefer vendors[]."
    },
    "vendor_type": {
      "type": "string",
      "minLength": 1,
      "default": "example_vendor",
      "description": "Legacy single-type mode extractor key. Prefer vendors[]."
    },
    "output_path": {
      "type": "string",
      "default": "data/output.xlsx"
    },
    "run_sql": {
      "type": "boolean",
      "default": false
    },
    "sql": {
      "type": "object",
      "additionalProperties": false,
      "required": ["connection_string"],
      "properties": {
        "connection_string": {
          "type": "string",
          "minLength": 1,
          "description": "SQLAlchemy connection string (example: mssql+pyodbc://...)"
        },
        "query_path": {
          "type": "string",
          "minLength": 1,
          "default": "sql/hoa_enrich.sql"
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "run_sql": { "const": true }
        }
      },
      "then": {
        "required": ["sql"]
      }
    }
  ]
}
